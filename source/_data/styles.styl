.tag-cloud-title {
    display: none
}
@keyframes bounce{10%{transform:translateY(2px);} 80%{transform:translateY(-10px);} 100%{transform:translateY(-6px);}}
@-webkit-keyframes bounce{10%{transform:translateY(2px);} 80%{transform:translateY(-10px);} 100%{transform:translateY(-6px);}}
.tag-cloud-tags a{
  border-radius: 15px
  border: 3.5px solid #68ACA3
  padding: 10px 30px
  width: 100px
  transition: all 0.2s linear;
  &:hover{
    border: inset 4.5px #f56627
    animation: bounce 0.3s 1 normal ease-out forwards;
    -webkit-animation: bounce 0.3s 1 normal ease-out forwards;
    box-shadow: 0px 1px 3px 0px #f56627
    opacity: 0.7
  }  
}
